<!--
    This Razor component represents the home page ("/") of the POS (Point of Sale) system.
    It includes a welcome message, a brief description of the system, and an "Order Now" button.
-->
@page "/"
@inject NavigationManager NavigationManager

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .welcome-container {
        text-align: center;
        margin-top: 100px;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    }

    .welcome-heading {
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #343a40;
    }

    .lead {
        color: #6c757d;
    }

    .order-now-button {
        font-size: 18px;
        padding: 10px 30px;
        margin-top: 20px;
        background-color: #007bff;
        color: #ffffff;
        border: none;
        border-radius: 5px;
        transition: background-color 0.5s;
    }

    .order-now-button:hover {
        background-color: #0056b3;
    }

    .logo-image {
        width: 40%;
        max-width: 200px;
        height: auto;
        margin: 0 auto;
    }
</style>

<div class="container welcome-container">
    <div class="row">
        <div class="col-md-12">
            <img src="images/cafe.jpg" alt="Café de Bislerium" class="logo-image">
            <h1 class="welcome-heading">Café de Bislerium </h1>
            <p class="lead">Point of Sale</p>
            <a href="#" class="btn btn-primary btn-lg order-now-button" @onclick="NavigateToLogin">Order Now</a>
        </div>
    </div>
</div>

@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}
